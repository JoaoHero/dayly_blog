generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id                 String     @id @default(uuid())
  title              String
  shortDescription   String
  fullDescription    String
  imageUrl           String
  tag                String
  createdAt          DateTime   @default(now())
  comments           Comment[]
  likes              Like[]
}

model User {
  id            String @id @default(cuid())
  name          String?
  email         String @unique
  password      String?
  img           String? @default("/images/userDefaultProfile.png")
  likes         Like[]
  comments      Comment[]
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())
  blog      Blog     @relation(fields: [blogId], references: [id])
  blogId    String
}

model Like {
  id        String   @id @default(uuid())
  userId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  blog      Blog     @relation(fields: [blogId], references: [id])
  blogId    String
}